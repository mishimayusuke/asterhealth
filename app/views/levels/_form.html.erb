<%= form_with(model: level) do |form| %>
  <% if level.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(level.errors.count, "error") %> prohibited this level from being saved:</h2>

      <ul>
        <% level.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :階級 %>
    <%= form.check_box :level_name, {multiple: true}, "初級", nil %>初級
    <%= form.check_box :level_name, {multiple: true}, "中級", nil %>中級
    <%= form.check_box :level_name, {multiple: true}, "上級", nil %>上級
    <%= form.check_box :level_name, {multiple: true}, "難易度の固定", nil %>難易度の固定
  </div>

  <div class="field">
    <%= form.label :目標歩数 %>
    <%= form.number_field :goal_step %>
  </div>

  <div class="actions">
    <%= form.submit "登録" %>
  </div>
  
 
<% end %>
