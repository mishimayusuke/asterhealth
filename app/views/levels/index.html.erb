<p id="notice"><%= notice %></p>

<h1>「レベル」</h1>

<table>
  <thead>
    <tr>
      <th>レベル</th>
      <th>目標歩数</th>
      <th>難易度の固定</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @levels.each do |level| %>
      <tr>
        <td><%= level.level_name %></td>
        <td><%= level.goal_step %></td>
        <td><%= link_to '詳細', level %></td>
        <td><%= link_to '編集', edit_level_path(level) %></td>
        <td><%= link_to '削除', level, method: :delete, data: { confirm: '本当に削除してもいいですか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規', new_level_path %>
