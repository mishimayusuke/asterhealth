<p id="notice"><%= notice %></p>

<h1>ユーザー</h1>

<table>
  <thead>
    <tr>
      <th>パスワード</th>
      <th>権限</th>
      <th>ニックネーム</th>
      <th>レベル</th>
      <th>Eメール</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.password %></td>
        <td><%= user.authority %></td>
        <td><%= user.nickname %></td>
        <td><%= user.level_id %></td>
        <td><%= user.mail%></td>
        <td><%= link_to '詳細', user %></td>
        <td><%= link_to '編集', edit_user_path(user) %></td>
        <td><%= link_to '削除', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

