<p id="notice"><%= notice %></p>

<h1>レコード</h1>

<table>
  <thead>
    <tr>
      <th>ユーザー名</th>
      <th>登録日</th>
      <th>歩数</th>
      <th>順位</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |record| %>
      <tr>
        <td><%= record.user_id %></td>
        <td><%= record.recorded %></td>
        <td><%= record.step %></td>
        <td><%= record.rank %></td>
        <td><%= link_to '見る', record %></td>
        <td><%= link_to '戻る', edit_record_path(record) %></td>
        <td><%= link_to '削除', record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

